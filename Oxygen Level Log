#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of oxygen readings: ");
    scanf("%d", &n);

    fp = fopen("oxygen_level_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Oxygen Level Log\n");
    fprintf(fp, "-----------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter oxygen level %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Oxygen %d = %.2f%%\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Oxygen levels saved to 'oxygen_level_log.txt'.\n");
}
