#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of acceleration readings: ");
    scanf("%d", &n);

    fp = fopen("acceleration_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Acceleration Reading Log\n");
    fprintf(fp, "------------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter acceleration %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Acceleration %d = %.2f m/s^2\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Acceleration readings saved to 'acceleration_log.txt'.\n");
}
