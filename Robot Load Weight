#include <stdio.h>

void main() 
{
    float load[5] = {12.5, 18.3, 25.7, 33.2, 40.8};
    float *ptr;
    int i;

    ptr = load;

    printf("Robot Load Weight:\n");
    for(i=0; i<5; i++) 
    {
        printf("load[%d] = %.2f\n", i, load[i]);
    }

    printf("\nPointer Output:\n");
    for(i=0; i<5; i++) 
    {
        printf("Load %d: %.2f kg\n", i+1, *(ptr+i));
    }
}
