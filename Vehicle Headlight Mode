#include <stdio.h>
int main() 
{
    int mode;
    printf("Vehicle Headlight Modes:\n1. Low Beam\n2. High Beam\n3. Off\nEnter mode: ");
    scanf("%d", &mode);
    switch(mode) 
{
        case 1: printf("Headlights on LOW BEAM.\n"); break;
        case 2: printf("Headlights on HIGH BEAM.\n"); break;
        case 3: printf("Headlights OFF.\n"); break;
        default: printf("Invalid mode.\n");
    }
    return 0;
}
