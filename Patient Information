#include <stdio.h>

struct Patient 
{
    int id;
    char name[30];
    float weight;
    char condition[20];
};

int main() 
{
    struct Patient p;

    printf("Enter Patient ID: ");
    scanf("%d", &p.id);

    printf("Enter Name: ");
    scanf("%s", p.name);

    printf("Enter Weight: ");
    scanf("%f", &p.weight);

    printf("Enter Condition: ");
    scanf("%s", p.condition);

    printf("\n PATIENT INFORMATION \n");
    printf("ID: %d\n", p.id);
    printf("Name: %s\n", p.name);
    printf("Weight: %.2f\n", p.weight);
    printf("Condition: %s\n", p.condition);

    return 0;
}
