#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of rainfall readings: ");
    scanf("%d", &n);

    fp = fopen("rainfall_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Rainfall Log\n");
    fprintf(fp, "-------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter rainfall %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Rainfall %d = %.2f mm\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Rainfall readings saved to 'rainfall_log.txt'.\n");
}
