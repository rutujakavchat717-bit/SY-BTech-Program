#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of humidity entries: ");
    scanf("%d", &n);

    fp = fopen("humidity_log.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }
    fprintf(fp, "Humidity Log\n");
    fprintf(fp, "------------\n");

    for (i = 0; i < n; i++)
    {
        printf("Enter humidity value %d: ", i + 1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Humidity %d = %.2f\n", i + 1, sensor[i]);
    }
    fclose(fp);

    printf("Humidity readings saved to 'humidity_log.txt'.\n");
}
