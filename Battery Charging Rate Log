#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of charging rate readings: ");
    scanf("%d", &n);

    fp = fopen("charging_rate_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Charging Rate Log\n");
    fprintf(fp, "------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter rate %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Rate %d = %.2f W/h\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Charging rate saved to 'charging_rate_log.txt'.\n");
}
