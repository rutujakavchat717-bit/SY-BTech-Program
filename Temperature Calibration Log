#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of calibration readings: ");
    scanf("%d", &n);

    fp = fopen("calibration_temperature_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Calibration Temperature Log\n");
    fprintf(fp, "----------------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter calibration value %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Calibration %d = %.2f Â°C\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Calibration data saved to 'calibration_temperature_log.txt'.\n");
}
