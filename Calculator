#include <stdio.h>

int main() 
{
    int choice;
    float a, b;
    printf("Calculator Menu:\n1. Add\n2. Subtract\n3. Multiply\n4. Divide\nEnter choice: ");
    scanf("%d", &choice);
    printf("Enter two numbers: ");
    scanf("%f %f", &a, &b);
    switch(choice) 
{
        case 1: printf("Result = %.2f\n", a + b); break;
        case 2: printf("Result = %.2f\n", a - b); break;
        case 3: printf("Result = %.2f\n", a * b); break;
        case 4: printf("Result = %.2f\n", a / b); break;
        default: printf("Invalid operation.\n");
    }
    return 0;
}
