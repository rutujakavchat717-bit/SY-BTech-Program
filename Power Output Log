#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of power readings: ");
    scanf("%d", &n);

    fp = fopen("power_output_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Power Output Log\n");
   	fprintf(fp, "-----------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter power %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Power %d = %.2f W\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Power readings saved to 'power_output_log.txt'.\n");
}
