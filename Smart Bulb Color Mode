#include <stdio.h>
int main() 
{
    int color;
    printf("Smart Bulb Color Modes:\n1. White\n2. Yellow\n3. Blue\n4. Red\nEnter color mode: ");
    scanf("%d", &color);
    switch(color) 
{
        case 1: printf("Bulb set to WHITE light.\n"); break;
        case 2: printf("Bulb set to YELLOW light.\n"); break;
        case 3: printf("Bulb set to BLUE light.\n"); break;
        case 4: printf("Bulb set to RED light.\n"); break;
        default: printf("Invalid color mode.\n");
    }
    return 0;
}
