#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of heart rate readings: ");
    scanf("%d", &n);

    fp = fopen("heart_rate_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Heart Rate Log\n");
    fprintf(fp, "---------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter heart rate %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Heart Rate %d = %.2f bpm\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Heart rate saved to 'heart_rate_log.txt'.\n");
}
