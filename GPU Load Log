#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of GPU load readings: ");
    scanf("%d", &n);

    fp = fopen("gpu_load_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "GPU Load Log\n");
    fprintf(fp, "-------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter GPU load %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Load %d = %.2f%%\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("GPU load saved to 'gpu_load_log.txt'.\n");
}
