#include <stdio.h>

struct Book 
{
    int id;
    char title[30];
    float price;
    char author[30];
};

int main() 
{
    struct Book b;

    printf("Enter Book ID: ");
    scanf("%d", &b.id);

    printf("Enter Title: ");
    scanf("%s", b.title);

    printf("Enter Price: ");
    scanf("%f", &b.price);

    printf("Enter Author: ");
    scanf("%s", b.author);

    printf("\n BOOK DETAILS \n");
    printf("ID: %d\n", b.id);
    printf("Title: %s\n", b.title);
    printf("Price: %.2f\n", b.price);
    printf("Author: %s\n", b.author);

    return 0;
}
