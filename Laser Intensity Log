#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of laser intensity readings: ");
    scanf("%d", &n);

    fp = fopen("laser_intensity_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Laser Intensity Log\n");
    fprintf(fp, "--------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter intensity %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Intensity %d = %.2f units\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Laser intensity saved to 'laser_intensity_log.txt'.\n");
}
