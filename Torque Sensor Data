#include <stdio.h>

void main() 
{
    float torque[5] = {10.1, 12.3, 15.5, 18.2, 20.0};
    float *ptr;
    int i;

    ptr = torque;

    printf("Torque Values:\n");
    for(i=0; i<5; i++) 
    {
        printf("torque[%d] = %.2f\n", i, torque[i]);
    }

    printf("\nDisplaying using pointer:\n");
    for(i=0; i<5; i++) 
    {
        printf("Torque %d: %.2f\n", i+1, *(ptr+i));
    }
}
