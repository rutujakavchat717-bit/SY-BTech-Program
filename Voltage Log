#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of voltage entries: ");
    scanf("%d", &n);

    fp = fopen("voltage_log.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }
    fprintf(fp, "Voltage Log\n");
    fprintf(fp, "-----------\n");

    for (i = 0; i < n; i++)
    {
        printf("Enter voltage %d: ", i + 1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Voltage %d = %.2f\n", i + 1, sensor[i]);
    }
    fclose(fp);

    printf("Voltage readings saved to 'voltage_log.txt'.\n");
}
