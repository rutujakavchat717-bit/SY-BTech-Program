#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of UV index readings: ");
    scanf("%d", &n);

    fp = fopen("uv_index_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "UV Index Log\n");
    fprintf(fp, "--------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter UV index %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "UV %d = %.2f\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("UV index saved to 'uv_index_log.txt'.\n");
}
