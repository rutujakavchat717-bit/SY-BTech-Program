#include <stdio.h>
float calculateAverage(float readings[], int size)
{
    float sum = 0;
    for(int i = 0; i < size; i++)
        sum += readings[i];
    return sum / size;
}
int main() 
{
    float readings[5];
    printf("Enter 5 sensor readings: ");
    for(int i = 0; i < 5; i++)
    scanf("%f", &readings[i]);
    printf("Average Sensor Reading = %.2f\n", calculateAverage(readings, 5));
    return 0;
}
