#include <stdio.h>

void main() 
{
    float flow[5] = {1.2, 2.8, 3.5, 4.9, 6.1};
    float *ptr;
    int i;

    ptr = flow;

    printf("Water Flow Rate:\n");
    for(i=0; i<5; i++) 
    {
        printf("flow[%d] = %.2f\n", i, flow[i]);
    }

    printf("\nPointer Output:\n");
    for(i=0; i<5; i++) 
    {
        printf("Flow %d: %.2f L/s\n", i+1, *(ptr+i));
    }
}
