#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of pH readings: ");
    scanf("%d", &n);

    fp = fopen("ph_log.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }
    fprintf(fp, "pH Value Log\n");
    fprintf(fp, "------------\n");

    for (i = 0; i < n; i++)
    {
        printf("Enter pH value %d: ", i + 1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "pH %d = %.2f\n", i + 1, sensor[i]);
    }
    fclose(fp);

    printf("pH values saved to 'ph_log.txt'.\n");
}
