#include <stdio.h>
float totalSteps(float steps[], int n) 
{
    float total = 0;
    for(int i = 0; i < n; i++)
        total += steps[i];
    return total;
}
int main() 
{
    float steps[5];
    printf("Enter steps walked in 5 days: ");
    for(int i = 0; i < 5; i++)
        scanf("%f", &steps[i]);
    printf("Total Steps Walked = %.0f\n", totalSteps(steps, 5));
    return 0;
}
