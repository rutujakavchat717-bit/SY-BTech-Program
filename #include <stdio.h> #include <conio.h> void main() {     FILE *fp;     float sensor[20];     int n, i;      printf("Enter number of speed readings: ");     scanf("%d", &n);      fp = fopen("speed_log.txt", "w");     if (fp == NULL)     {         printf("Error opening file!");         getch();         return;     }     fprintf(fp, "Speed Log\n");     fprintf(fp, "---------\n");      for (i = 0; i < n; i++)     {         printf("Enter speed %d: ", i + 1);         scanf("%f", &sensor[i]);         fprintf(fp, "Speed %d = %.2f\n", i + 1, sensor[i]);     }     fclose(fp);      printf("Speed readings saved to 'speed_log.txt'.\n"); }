#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of light readings: ");
    scanf("%d", &n);

    fp = fopen("light_log.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }
    fprintf(fp, "Light Intensity Log\n");
    fprintf(fp, "-------------------\n");

    for (i = 0; i < n; i++)
    {
        printf("Enter intensity %d: ", i + 1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Intensity %d = %.2f\n", i + 1, sensor[i]);
    }
    fclose(fp);

    printf("Light readings saved to 'light_log.txt'.\n");
}
