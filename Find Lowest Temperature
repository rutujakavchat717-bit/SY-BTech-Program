#include <stdio.h>
float lowest(float t[], int n) 
{
    float min = t[0];
    for(int i = 1; i < n; i++)
        if(t[i] < min)
            min = t[i];
    return min;
}
int main() 
{
    float t[5];
    printf("Enter 5 temperature readings: ");
    for(int i = 0; i < 5; i++)
        scanf("%f", &t[i]);
    printf("Lowest Temperature = %.2fÂ°C\n", lowest(t, 5));
    return 0;
}
