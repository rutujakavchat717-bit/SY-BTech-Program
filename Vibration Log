#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of vibration readings: ");
    scanf("%d", &n);

    fp = fopen("vibration_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Vibration Log\n");
    fprintf(fp, "--------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter vibration %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Vibration %d = %.2f Hz\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Vibration readings saved to 'vibration_log.txt'.\n");
}
