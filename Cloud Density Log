#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of cloud density readings: ");
    scanf("%d", &n);

    fp = fopen("cloud_density_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Cloud Density Log\n");
    fprintf(fp, "------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter density %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Density %d = %.2f g/m3\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Cloud density saved to 'cloud_density_log.txt'.\n");
}
