#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of distance readings: ");
    scanf("%d", &n);

    fp = fopen("distance_log.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }
    fprintf(fp, "Distance Reading Log\n");
    fprintf(fp, "--------------------\n");

    for (i = 0; i < n; i++)
    {
        printf("Enter distance %d: ", i + 1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Distance %d = %.2f\n", i + 1, sensor[i]);
    }
    fclose(fp);

    printf("Distance readings saved to 'distance_log.txt'.\n");
}
