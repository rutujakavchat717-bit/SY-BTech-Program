#include <stdio.h>

struct Student 
{
    int roll;
    char name[30];
    float marks;
    char grade[10];
};

int main() 
{
    struct Student s;

    printf("Enter Roll No: ");
    scanf("%d", &s.roll);

    printf("Enter Name: ");
    scanf("%s", s.name);

    printf("Enter Marks: ");
    scanf("%f", &s.marks);

    printf("Enter Grade: ");
    scanf("%s", s.grade);

    printf("\n STUDENT DATA \n");
    printf("Roll: %d\n", s.roll);
    printf("Name: %s\n", s.name);
    printf("Marks: %.2f\n", s.marks);
    printf("Grade: %s\n", s.grade);

    return 0;
}
