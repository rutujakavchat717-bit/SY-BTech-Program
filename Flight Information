#include <stdio.h>

struct Flight 
{
    int number;
    char name[30];
    float duration;
    char status[20];
};

int main() 
{
    struct Flight f;

    printf("Enter Flight Number: ");
    scanf("%d", &f.number);

    printf("Enter Flight Name: ");
    scanf("%s", f.name);

    printf("Enter Duration (hours): ");
    scanf("%f", &f.duration);

    printf("Enter Status (OnTime/Delayed): ");
    scanf("%s", f.status);

    printf("\n FLIGHT INFORMATION \n");
    printf("Number: %d\n", f.number);
    printf("Name: %s\n", f.name);
    printf("Duration: %.2f hrs\n", f.duration);
    printf("Status: %s\n", f.status);

    return 0;
}
