#include <stdio.h>

struct Sensor 
{
    int id;
    char name[30];
    float value;
    char status[20];
};

int main() 
{
    struct Sensor s;

    printf("Enter Sensor ID: ");
    scanf("%d", &s.id);

    printf("Enter Sensor Name: ");
    scanf("%s", s.name);

    printf("Enter Sensor Value: ");
    scanf("%f", &s.value);

    printf("Enter Sensor Status (Active/Inactive): ");
    scanf("%s", s.status);

    printf("\n---- ROBOT SENSOR DATA ----\n");
    printf("ID: %d\n", s.id);
    printf("Name: %s\n", s.name);
    printf("Value: %.2f\n", s.value);
    printf("Status: %s\n", s.status);

    return 0;
}
