#include <stdio.h>
float totalCost(float c[], int n) 
{
    float total = 0;
    for(int i = 0; i < n; i++)
        total += c[i];
    return total;
}
int main() 
{
    float c[5];
    printf("Enter production cost of 5 items: ");
    for(int i = 0; i < 5; i++)
        scanf("%f", &c[i]);
    printf("Total Production Cost = %.2f\n", totalCost(c, 5));
    return 0;
}
