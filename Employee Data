#include <stdio.h>

struct Employee 
{
    int id;
    char name[30];
    float salary;
    char dept[20];
};

int main() 
{
    struct Employee e;

    printf("Enter Employee ID: ");
    scanf("%d", &e.id);

    printf("Enter Name: ");
    scanf("%s", e.name);

    printf("Enter Salary: ");
    scanf("%f", &e.salary);

    printf("Enter Department: ");
    scanf("%s", e.dept);

    printf("\n EMPLOYEE DATA \n");
    printf("ID: %d\n", e.id);
    printf("Name: %s\n", e.name);
    printf("Salary: %.2f\n", e.salary);
    printf("Dept: %s\n", e.dept);

    return 0;
}
