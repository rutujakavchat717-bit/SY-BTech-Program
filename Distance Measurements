#include <stdio.h>

void main() 
{
    float dist[5] = {10.1, 20.2, 30.3, 40.4, 50.5};
    float *ptr;
    int i;

    ptr = dist;

    printf("Distance Measurements:\n");
    for(i=0; i<5; i++) 
    {
        printf("dist[%d] = %.2f\n", i, dist[i]);
    }

    printf("\nDisplaying using pointer:\n");
    for(i=0; i<5; i++) 
    {
        printf("Distance %d: %.2f\n", i+1, *(ptr+i));
    }
}
