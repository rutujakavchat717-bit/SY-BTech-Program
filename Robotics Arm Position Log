#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of arm position readings: ");
    scanf("%d", &n);

    fp = fopen("arm_position_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Robotic Arm Position Log\n");
    fprintf(fp, "-------------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter position %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Position %d = %.2f deg\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Arm positions saved to 'arm_position_log.txt'.\n");
}
