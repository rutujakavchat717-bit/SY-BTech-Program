#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of sensors: ");
    scanf("%d", &n);

    fp = fopen("temperature_log.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }
    fprintf(fp, "Temperature Sensor Log\n");
    fprintf(fp, "----------------------\n");

    for (i = 0; i < n; i++)
    {
        printf("Enter temperature reading %d: ", i + 1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Temperature %d = %.2f\n", i + 1, sensor[i]);
    }
    fclose(fp);

    printf("Temperature readings saved to 'temperature_log.txt'.\n");
}
