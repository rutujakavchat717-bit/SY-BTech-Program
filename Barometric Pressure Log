#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of barometric readings: ");
    scanf("%d", &n);

    fp = fopen("barometric_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Barometric Pressure Log\n");
    fprintf(fp, "------------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter pressure %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Pressure %d = %.2f hPa\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Barometric pressure saved to 'barometric_log.txt'.\n");
}
