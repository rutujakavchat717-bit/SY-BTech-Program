#include <stdio.h>

struct Machine 
{
    int id;
    char name[30];
    float load;
    char status[20];
};

int main() 
{
    struct Machine m;

    printf("Enter Machine ID: ");
    scanf("%d", &m.id);

    printf("Enter Machine Name: ");
    scanf("%s", m.name);

    printf("Enter Load: ");
    scanf("%f", &m.load);

    printf("Enter Status (Running/Stopped): ");
    scanf("%s", m.status);

    printf("\n MACHINE DETAILS \n");
    printf("ID: %d\n", m.id);
    printf("Name: %s\n", m.name);
    printf("Load: %.2f\n", m.load);
    printf("Status: %s\n", m.status);

    return 0;
}
