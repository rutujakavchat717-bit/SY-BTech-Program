#include <stdio.h>

void main() 
{
    float accel[5] = {0.8, 1.5, 2.2, 3.1, 4.0};
    float *ptr;
    int i;

    ptr = accel;

    printf("Acceleration Values:\n");
    for(i=0; i<5; i++) 
    {
        printf("accel[%d] = %.2f\n", i, accel[i]);
    }

    printf("\nUsing Pointer:\n");
    for(i=0; i<5; i++) 
    {
        printf("Accel %d: %.2f m/s^2\n", i+1, *(ptr+i));
    }
}
