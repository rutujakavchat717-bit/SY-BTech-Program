#include <stdio.h>

struct Package 
{
    int id;
    char customer[30];
    float weight;
    char status[20];
};

int main() 
{
    struct Package p;

    printf("Enter Package ID: ");
    scanf("%d", &p.id);

    printf("Enter Customer Name: ");
    scanf("%s", p.customer);

    printf("Enter Weight: ");
    scanf("%f", &p.weight);

    printf("Enter Status: ");
    scanf("%s", p.status);

    printf("\n PACKAGE DETAILS \n");
    printf("ID: %d\n", p.id);
    printf("Customer: %s\n", p.customer);
    printf("Weight: %.2f\n", p.weight);
    printf("Status: %s\n", p.status);

    return 0;
}
