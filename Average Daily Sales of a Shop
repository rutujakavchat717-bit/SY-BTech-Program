#include <stdio.h>
float avgSales(float s[], int n) 
{
    float sum = 0;
    for(int i = 0; i < n; i++)
        sum += s[i];
    return sum / n;
}
int main() 
{
    float s[5];
    printf("Enter sales amount for 5 days: ");
    for(int i = 0; i < 5; i++)
        scanf("%f", &s[i]);
    printf("Average Daily Sales = %.2f\n", avgSales(s, 5));
    return 0;
}
