#include <stdio.h>
float avgRain(float rain[], int n) 
{
    float total = 0;
    for(int i = 0; i < n; i++)
        total += rain[i];
    return total / n;
}
int main() 
{
    float rain[5];
    printf("Enter rainfall (in mm) for 5 cities: ");
    for(int i = 0; i < 5; i++)
        scanf("%f", &rain[i]);
    printf("Average Rainfall = %.2f mm\n", avgRain(rain, 5));
    return 0;
}
