#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of engine temperature readings: ");
    scanf("%d", &n);

    fp = fopen("engine_temperature_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Engine Temperature Log\n");
    fprintf(fp, "-----------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter temperature %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Temp %d = %.2f Â°C\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Engine temperatures saved to 'engine_temperature_log.txt'.\n");
}
