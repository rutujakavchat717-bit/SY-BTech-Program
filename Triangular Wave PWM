#include <stdio.h>
#include <unistd.h>
void main() 
{
int period = 10;
    printf("PWM HARD 4: Triangle Wave\n");
    for (int i = 0; i < period; i++) 
{
        for (int j = 0; j < i; j++) printf("1");
        for (int j = i; j < period; j++) printf("0");
        printf("\n");
 }
    for (int i = period; i >= 0; i--) 
{
        for (int j = 0; j < i; j++) printf("1");
        for (int j = i; j < period; j++) printf("0");
        printf("\n");
    }
}
