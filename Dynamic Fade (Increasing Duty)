#include <stdio.h>
#include <unistd.h>
void main() 
{
    int period = 20;
    printf("PWM HARD 1: Fade In\n");
    for (int duty = 0; duty <= period; duty++) 
{
        for (int i = 0; i < period; i++)
            printf(i < duty ? "1" : "0");
        printf("\n");
        usleep(200000); // 0.2 sec delay
}
}
