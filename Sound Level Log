#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of sound readings: ");
    scanf("%d", &n);

    fp = fopen("sound_log.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }
    fprintf(fp, "Sound Level Log\n");
    fprintf(fp, "----------------\n");

    for (i = 0; i < n; i++)
    {
        printf("Enter sound level %d: ", i + 1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Sound %d = %.2f\n", i + 1, sensor[i]);
    }
    fclose(fp);

    printf("Sound readings saved to 'sound_log.txt'.\n");
}
