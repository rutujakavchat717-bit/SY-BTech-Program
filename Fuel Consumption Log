#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of fuel readings: ");
    scanf("%d", &n);

    fp = fopen("fuel_consumption_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Fuel Consumption Log\n");
    fprintf(fp, "---------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter fuel %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Fuel %d = %.2f L\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Fuel data saved to 'fuel_consumption_log.txt'.\n");
}
