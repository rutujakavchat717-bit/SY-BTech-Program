#include <stdio.h>
float average(float temp[], int n) 
{
    float sum = 0;
    for(int i = 0; i < n; i++)
        sum += temp[i];
    return sum / n;
}
int main() 
{
    float temp[5];
    printf("Enter temperature of 5 days: ");
    for(int i = 0; i < 5; i++)
        scanf("%f", &temp[i]);
    printf("Average Temperature = %.2fÂ°C\n", average(temp, 5));
    return 0;
}
