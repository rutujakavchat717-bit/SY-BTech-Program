#include <stdio.h>
float avgHumidity(float h[], int n) 
{
    float total = 0;
    for(int i = 0; i < n; i++)
        total += h[i];
    return total / n;
}
int main() 
{
    float h[5];
    printf("Enter humidity for 5 days (in %%): ");
    for(int i = 0; i < 5; i++)
        scanf("%f", &h[i]);
    printf("Average Humidity = %.2f%%\n", avgHumidity(h, 5));
    return 0;
}
