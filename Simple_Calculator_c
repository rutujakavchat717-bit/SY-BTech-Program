#include<stdio.h>

void main() 
{
    char op;
    float a, b;
    printf("Enter operator (+, -, *, /): ");
    scanf(" %c", &op);
    printf("Enter two operands: ");
    scanf("%f %f", &a, &b);

    switch(op) {
        case '+': printf("%.2f", a + b); break;
        case '-': printf("%.2f", a - b); break;
        case '*': printf("%.2f", a * b); break;
        case '/': 
            if(b != 0)
                printf("%.2f", a / b);
            else
                printf("Division by zero error");
            break;
        default: printf("Invalid operator");
    }
}
