#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of speed readings: ");
    scanf("%d", &n);

    fp = fopen("speed_log.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }
    fprintf(fp, "Speed Log\n");
    fprintf(fp, "---------\n");

    for (i = 0; i < n; i++)
    {
        printf("Enter speed %d: ", i + 1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Speed %d = %.2f\n", i + 1, sensor[i]);
    }
    fclose(fp);

    printf("Speed readings saved to 'speed_log.txt'.\n");
}
