#include <stdio.h>

struct Motor 
{
    int id;
    char type[30];
    float speed;
    char status[20];
};

int main() 

    struct Motor m;

    printf("Enter Motor ID: ");
    scanf("%d", &m.id);

    printf("Enter Motor Type: ");
    scanf("%s", m.type);

    printf("Enter Motor Speed: ");
    scanf("%f", &m.speed);

    printf("Enter Status (Running/Stopped): ");
    scanf("%s", m.status);

    printf("\n MOTOR DETAILS \n");
    printf("ID: %d\n", m.id);
    printf("Type: %s\n", m.type);
    printf("Speed: %.2f\n", m.speed);
    printf("Status: %s\n", m.status);

    return 0;
}
