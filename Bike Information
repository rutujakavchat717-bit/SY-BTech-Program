#include <stdio.h>

struct Bike 
{
    int id;
    char model[30];
    float mileage;
    char type[20];
};

int main() 
{
    struct Bike b;

    printf("Enter Bike ID: ");
    scanf("%d", &b.id);

    printf("Enter Model: ");
    scanf("%s", b.model);

    printf("Enter Mileage: ");
    scanf("%f", &b.mileage);

    printf("Enter Type (Sport/Cruiser): ");
    scanf("%s", b.type);

    printf("\n BIKE INFORMATION \n");
    printf("ID: %d\n", b.id);
    printf("Model: %s\n", b.model);
    printf("Mileage: %.2f\n", b.mileage);
    printf("Type: %s\n", b.type);

    return 0;
}
