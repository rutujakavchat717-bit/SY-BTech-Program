#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of GPU temperature readings: ");
    scanf("%d", &n);

    fp = fopen("gpu_temp_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "GPU Temperature Log\n");
    fprintf(fp, "-------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter GPU temperature %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "GPU Temp %d = %.2fÂ°C\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("GPU temperature saved to 'gpu_temp_log.txt'.\n");
}
