#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of current readings: ");
    scanf("%d", &n);

    fp = fopen("current_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Current Flow Log\n");
    fprintf(fp, "-----------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter current %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Current %d = %.2f A\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Current readings saved to 'current_log.txt'.\n");
}
