#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of torque readings: ");
    scanf("%d", &n);

    fp = fopen("torque_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Torque Reading Log\n");
    fprintf(fp, "------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter torque %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Torque %d = %.2f Nm\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Torque readings saved to 'torque_log.txt'.\n");
}
