#include <stdio.h>

struct FactoryMachine 
{
    int id;
    char name[30];
    float runtime;
    char status[20];
};

int main() 
{
    struct FactoryMachine m;

    printf("Enter Machine ID: ");
    scanf("%d", &m.id);

    printf("Enter Name: ");
    scanf("%s", m.name);

    printf("Enter Runtime (hrs): ");
    scanf("%f", &m.runtime);

    printf("Enter Status: ");
    scanf("%s", m.status);

    printf("\n MACHINE INFORMATION \n");
    printf("ID: %d\n", m.id);
    printf("Name: %s\n", m.name);
    printf("Runtime: %.2f hrs\n", m.runtime);
    printf("Status: %s\n", m.status);

    return 0;
}
