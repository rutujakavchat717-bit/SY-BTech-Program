#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of wind speed readings: ");
    scanf("%d", &n);

    fp = fopen("wind_speed_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Wind Speed Log\n");
    fprintf(fp, "----------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter wind speed %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Wind %d = %.2f km/h\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Wind speed readings saved to 'wind_speed_log.txt'.\n");
}
