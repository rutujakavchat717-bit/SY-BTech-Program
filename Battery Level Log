#include <stdio.h>
#include <conio.h>
void main()
{
    FILE *fp;
    float sensor[20];
    int n, i;

    printf("Enter number of battery levels: ");
    scanf("%d", &n);

    fp = fopen("battery_level_log.txt", "w");
    if(fp == NULL)
    {
        printf("Error opening file!");
        getch();
        return;
    }

    fprintf(fp, "Battery Level Log\n");
    fprintf(fp, "------------------\n");

    for(i=0; i<n; i++)
    {
        printf("Enter battery level %d: ", i+1);
        scanf("%f", &sensor[i]);
        fprintf(fp, "Level %d = %.2f%%\n", i+1, sensor[i]);
    }

    fclose(fp);

    printf("Battery levels saved to 'battery_level_log.txt'.\n");
}
