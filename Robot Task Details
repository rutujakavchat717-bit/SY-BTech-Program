#include <stdio.h>

struct Task 
{
    int id;
    char title[30];
    float time;
    char priority[20];
};

int main() 
{
    struct Task t;

    printf("Enter Task ID: ");
    scanf("%d", &t.id);

    printf("Enter Task Title: ");
    scanf("%s", t.title);

    printf("Enter Time Required: ");
    scanf("%f", &t.time);

    printf("Enter Priority: ");
    scanf("%s", t.priority);

    printf("\n ROBOT TASK DETAILS \n");
    printf("ID: %d\n", t.id);
    printf("Title: %s\n", t.title);
    printf("Time: %.2f\n", t.time);
    printf("Priority: %s\n", t.priority);

    return 0;
}
