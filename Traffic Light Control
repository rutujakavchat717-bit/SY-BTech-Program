#include <stdio.h>
int main() 
{
    int signal;
    printf("Traffic Light Control:\n1. Red\n2. Yellow\n3. Green\nEnter signal: ");
    scanf("%d", &signal);
    switch(signal) 
{
        case 1: printf("STOP! Red light.\n"); break;
        case 2: printf("Get ready. Yellow light.\n"); break;
        case 3: printf("Go! Green light.\n"); break;
        default: printf("Invalid signal.\n");
}
    return 0;
}
