#include <stdio.h>

struct Mobile 
{
    int id;
    char model[30];
    float price;
    char brand[20];
};

int main() 
{
    struct Mobile m;

    printf("Enter Mobile ID: ");
    scanf("%d", &m.id);

    printf("Enter Model: ");
    scanf("%s", m.model);

    printf("Enter Price: ");
    scanf("%f", &m.price);

    printf("Enter Brand: ");
   	scanf("%s", m.brand);

    printf("\n MOBILE INFORMATION \n");
    printf("ID: %d\n", m.id);
    printf("Model: %s\n", m.model);
    printf("Price: %.2f\n", m.price);
    printf("Brand: %s\n", m.brand);

    return 0;
}
