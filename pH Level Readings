#include <stdio.h>

void main() 
{
    float ph[5] = {6.5, 6.8, 7.0, 7.2, 7.5};
    float *ptr;
    int i;

    ptr = ph;

    printf("pH Readings:\n");
    for(i=0; i<5; i++) 
    {
        printf("ph[%d] = %.2f\n", i, ph[i]);
    }

    printf("\nDisplaying using pointer:\n");
    for(i=0; i<5; i++) 
    {
        printf("pH %d: %.2f\n", i+1, *(ptr+i));
    }
}
